extends ../layout

block content
    h1 Disciplinas
    a(href="/disciplinas/create",class="btn btn-success") Cadastrar
    br
    br
    table(class='table table-striped')
        th Id
        th Descrição
        th Curso
        each disciplina in disciplinas
            tr
                td=disciplina.iddisciplina
                td=disciplina.descricao
                td=disciplina.idcurso